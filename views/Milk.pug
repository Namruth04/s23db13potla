extends layout

block content
  h1= title
  - let results = result
  div.container-fluid
    div.row
      each milk,index in results
       div.col-sm-2(onclick=`buy(${index})`) #{milk.name}
       div.col-sm-2(onclick=`buy(${index})`) #{milk.type}
       div.col-sm-2(onclick=`buy(${index})`) #{milk.price}
       br
       hr

  script. 
      function buy(index)
      {
        alert(`you purchased Item ${index+1}`)
      }